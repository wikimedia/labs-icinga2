         command = [ PluginDir + "/check_nrpe" ]
         arguments = {
         "-H" = "$host$",
         "-c" = "$check$",
         "-t" = "300"
         }
}

object CheckCommand "nrpe-check-disk" {
         import "plugin-check-command"

